 /*背景气泡*/
 .bkbubble .p{ 
     color: white;display: inline-block;
     padding: 12px;margin: 10px;
     position: relative;border-radius: 5px; 
 }
 .bkbubble.right .p {
     margin-left: 80px;
     background-color: #8d43ca;
 }
  .bkbubble.left .p {
     margin-right: 80px;
     background-color: #00bfff;
 }
  .bkbubble.right .p:before, .bkbubble.left .p:before {
      width: 0;
    position: absolute;
    top: 12px;
    border-style: solid;
    content: "";
  }
  .bkbubble.left {
      text-align: right;
  }
 .bkbubble.right .p:before {
     left: -12px;
    border-color: transparent #8d43ca;
    border-width: 0 12px 12px 0;
 }
 .bkbubble.left .p:before {
     right: -12px;
    border-color: transparent #00bfff;
    border-width: 0 0 12px 12px ;
 }


 