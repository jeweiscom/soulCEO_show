  background-color: rgb(141, 177, 245);
}
.page-content{
border-radius:5px;
  padding: 20px;
  display: block;
  margin: 20px;
}
.tags{
  float: left;
  padding: 5px;
}
.clearboth{
  clear: both;
}
.tag{
border-radius:5px;
  padding: 3px;
  display:inline;
  background-color: #fff;
  color: #3B3B3B;
  margin: 5px;
   box-shadow: 2px 2px 10px #A83A3A;
}
.desc{
  padding: 3px;
  color: #515151;
  background-color: #fff;
  margin: 10px 5px;
  box-shadow: 1px 1px 1px #A83A3A;
}
.avatarview{
text-align: center;
margin: 5px;
}
.avatar{
  width:70px;
   height:70px; 
   border-radius:50%;
   -webkit-border-radius:50%;
   -moz-border-radius:50%;
  box-shadow: 2px 2px 10px #A83A3A;
  
}
.qrcode{
  margin: 10px 5px;
  color:rgb(82, 76, 76);
}
.oper{
  margin:20px;
  color:rgb(226, 226, 226);
  text-shadow:1px 1px 1px #000;
}
.btn_oper{
  color: white;
  border: 1px solid white;
  text-shadow:1px 1px 1px #000;
}
.row{
  float: right;
}