page {
  display: block;
  min-height: 100%;
  height: 100%;
  color: white;
}
.page{
  display: block;
  min-height: 100%;
  height: 100%;
  color: white;
  -webkit-user-select:none;
  user-select:none;
  width:100%;
  overflow-x:hidden;

}
.page-backcolor-0{
  background-color: #A83A3A;
}
.page-backcolor-1{
  background-color: #66CDAA;
}
.page-backcolor-2{
  background-color: #9A32CD;
}
.page-backcolor-3{
  background-color: #8B0A50;
}
.page-backcolor-4{
  background-color: #32CD32;
}
.page-backcolor-5{
  background-color: #CD5555;
}
.page-backcolor-6{
  background-color: #6495ED;
}

.page-backcolor2-0{
  background-color: rgb(255, 227, 227);
}
.page-backcolor2-1{
  background-color: rgb(168, 241, 217);
}
.page-backcolor2-2{
  background-color: #C78EE4;
}
.page-backcolor2-3{
  background-color: #D17AAA;
}
.page-backcolor2-4{
  background-color: rgb(135, 233, 135);
}
.page-backcolor2-5{
  background-color: rgb(235, 192, 192);
}
